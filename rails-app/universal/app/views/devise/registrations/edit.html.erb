                    if(j == 0){
                        $.ajax({
                          type: "POST",
                          url: "/violations/neighborhoods",
                          data: { "district_id": data[j].id },
                        }).done(function(data) {
                            var selectbox = $('#neighborhoods');
                            selectbox.empty();
                            var list = '';
                            for (var j = 0; j < data.length; j++){
                                    list += "<option value='" +data[j].id+ "'>" +data[j].name+ "</option>";
                            }
                            selectbox.html(list);
                        });
                    }
            }
            selectbox.html(list);
        });
    });

    $('#districts').on('change', function() {
